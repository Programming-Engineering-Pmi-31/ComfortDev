<Page x:Class="ComfortDevClient.Pages.TaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComfortDevClient.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TaskPage">

    <Grid Background="White">
        <Button x:Name="backToIdlePageButton" Content="Next" HorizontalAlignment="Left" Margin="619,384,0,0" VerticalAlignment="Top" Height="32" Width="115"
                BorderBrush="Transparent" BorderThickness="0" Background="#FF96FF4D" FontFamily="Cambria" FontSize="18" Click="backToIdlePageButton_Click">
            <Button.Effect>
                <DropShadowEffect Color="#FFBBBBBB" Direction="0" BlurRadius="15" RenderingBias="Quality" ShadowDepth="1"/>
            </Button.Effect>
        </Button>




    </Grid>
</Page>
