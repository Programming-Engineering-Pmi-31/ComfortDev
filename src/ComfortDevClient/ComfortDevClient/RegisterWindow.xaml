<Window x:Class="ComfortDevClient.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComfortDevClient"
        mc:Ignorable="d"
        Title="tems" Height="600" Width="440">
    <Grid>
        <Rectangle x:Name="rgimg" Height="350" VerticalAlignment="Top" Margin="0,0,-2,0">
            <Rectangle.Fill>
                <ImageBrush ImageSource="source/Register-Window-Background-3.jpg"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Width="280" Height="240" Fill="White" Margin="76,164">
            <Rectangle.Effect>
                <DropShadowEffect Color="#FFBBBBBB" Direction="0" BlurRadius="15" RenderingBias="Quality" ShadowDepth="1"/>
            </Rectangle.Effect>
        </Rectangle>
        <TextBox x:Name="textBox2" HorizontalAlignment="Left" Height="23" Margin="92,246,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="250" Background="#FFE8E8E8" BorderThickness="1" TextChanged="textBox2_TextChanged">
            <TextBox.Effect>
                <DropShadowEffect Color="#FFEEEEEE"/>
            </TextBox.Effect>
        </TextBox>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="23" Margin="92,306,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Background="#FFE8E8E8">
            <TextBox.Effect>
                <DropShadowEffect Color="#FFEEEEEE"/>
            </TextBox.Effect>
        </TextBox>
        <Button x:Name="button" Content="Let`s start" HorizontalAlignment="Left" Margin="145,385,0,0" VerticalAlignment="Top" Width="148" Height="35" FontFamily="AdonisC" FontSize="16" Background="#FFDE88FF" BorderThickness="0,0,2,2">
            <Button.Effect>
                <DropShadowEffect Color="#FFE8E8E8"/>
            </Button.Effect>
        </Button>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="96,227,0,0" TextWrapping="Wrap" Text="Please, enter the login" VerticalAlignment="Top" FontSize="16" FontFamily="AdonisC"/>
        <TextBox x:Name="textBox2_Copy" HorizontalAlignment="Left" Height="23" Margin="92,246,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="250" Background="#FFE8E8E8" BorderThickness="1" TextChanged="textBox2_TextChanged">
            <TextBox.Effect>
                <DropShadowEffect Color="#FFEEEEEE"/>
            </TextBox.Effect>
        </TextBox>
        <TextBox x:Name="textBox1_Copy" HorizontalAlignment="Left" Height="23" Margin="92,355,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Background="#FFE8E8E8">
            <TextBox.Effect>
                <DropShadowEffect Color="#FFEEEEEE"/>
            </TextBox.Effect>
        </TextBox>
        <TextBlock x:Name="textBlock1_Copy" HorizontalAlignment="Left" Margin="96,287,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" FontSize="16" FontFamily="AdonisC"/>
        <TextBlock x:Name="textBlock1_Copy1" HorizontalAlignment="Left" Margin="172,185,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" FontFamily="AdonisC"><Run Text="Registration"/><LineBreak/><Run/></TextBlock>
        <TextBlock x:Name="textBlock1_Copy2" HorizontalAlignment="Left" Margin="96,334,0,0" TextWrapping="Wrap" Text="re-enter" VerticalAlignment="Top" FontSize="16" FontFamily="AdonisC"/>

    </Grid>
</Window>
