<Window x:Class="ComfortDevClient.IdleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComfortDevClient"
        mc:Ignorable="d" WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Title="IdleWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Frame x:Name="MyFrame" Background="Bisque"
                NavigationUIVisibility="Hidden"
               />
        <Button Content="_" Margin="0,0,61,0" 
                Background="#FFFFC447" BorderBrush="Transparent" BorderThickness="0"
                VerticalAlignment="Top" Height="25" FontFamily="Bauhaus 93" FontWeight="Normal" FontStyle="Normal"
                Click="Button_Hide" HorizontalAlignment="Right" Width="56"/>
        <Button Content="X" 
                Background="#FFFFC447" BorderBrush="Transparent" BorderThickness="0" FontFamily="Bauhaus 93" FontWeight="Normal" FontStyle="Normal" 
                Click="Button_Close" HorizontalAlignment="Right" Width="56" Height="25" VerticalAlignment="Top"/>

    </Grid>
</Window>
